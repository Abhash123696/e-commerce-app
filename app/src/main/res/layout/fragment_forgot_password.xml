<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:id="@+id/forgotPasswordFrameLayout"
    tools:context=".ForgotPassword">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/forgot_password"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:textSize="32sp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="#3EB255"
            android:textStyle="bold"
            android:layout_marginHorizontal="10dp"
            />

        <TextView
            android:layout_margin="15dp"
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:text="Don't worry we just need your registered email address and its done"
            android:gravity="center"
            android:textColor="@color/btn_start_color"
            android:textSize="20sp"
            android:padding="4dp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/forgotPasswordEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Email ID"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            />

        <LinearLayout
            android:id="@+id/forgotPasswordEmailContainerIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            >

            <ImageView
                android:id="@+id/forgotPasswordEmailIcon"
                android:visibility="gone"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/forgot_password_email_icon_red" />

            <TextView
                android:id="@+id/tvForgotPasswordMessage"
                android:visibility="gone"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recovery Email sent Sucessfully ! Check your Inbox."
                android:textSize="18dp"
                android:textColor="#11A106"
                android:textStyle="bold"
                />

        </LinearLayout>


        <ProgressBar

            android:id="@+id/simpleProgressBar"
            android:layout_width="75dp"
            android:layout_height="wrap_content"

            android:visibility="gone"
            android:layout_gravity="center"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
        <Button
            android:id="@+id/resetPasswordButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:background="@drawable/button_background_design"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="50dp"
            android:textSize="30sp"
            android:textAllCaps="false"
            />



        <TextView
            android:id="@+id/tvForgotPasswordGoBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="&lt; &lt; Go Back"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:textSize="24sp"
            android:textColor="@color/btn_start_color"
            />




    </LinearLayout>


</FrameLayout>